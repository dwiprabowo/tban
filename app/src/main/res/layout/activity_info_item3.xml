<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi tambalban dibedakan kedalam 3 jenis, yaitu yang khusus untuk motor, mobil dan tambalban untuk mobil atau motor"
                android:id="@+id/textView10" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView11"
                    android:src="@drawable/type_bike" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tambalban Motor"
                    android:id="@+id/textView11"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/type_car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="TambalBan Mobil"
                    android:id="@+id/textView12"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView13"
                    android:src="@drawable/type_all" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="TambalBan Motor/Mobil"
                    android:id="@+id/textView13"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dengan Aksi klik pada salah satu tanda tersebut, Anda dapat menggunakan fasilitas google map untuk mendapatkan arah menuju lokasi tersebut."
                android:id="@+id/textView14"
                android:layout_marginTop="32dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>